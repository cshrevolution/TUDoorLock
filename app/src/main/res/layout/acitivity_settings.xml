<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 상단의 뒤로가기 버튼과 제목을 포함하는 LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="뒤로가기"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="설정        "
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문 열림 시 매번 비밀번호 입력하기" />

    <Button
        android:id="@+id/btn_product_id_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_border"
        android:padding="16dp"
        android:text="제품 ID 변경"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_product_password_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_border"
        android:padding="16dp"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_rfid_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_border"
        android:padding="16dp"
        android:text="RFID카드 관리"
        android:textColor="#000000"
        android:textSize="18sp" />

</LinearLayout>
